        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event_StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event_EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occuring)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
