    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Event_StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Event_EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Occuring)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
